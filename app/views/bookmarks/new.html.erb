<div class="container">
  <h1 class="text-center my-4">Add a New Bookmark to <%= @list.name %></h1>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <div class="form-group">
      <%= f.input :movie_id, collection: Movie.all, label_method: :title, value_method: :id, label: "Select a Movie", input_html: { class: 'form-control' } %>
      <%= f.input :comment, label: "Comment", input_html: { class: 'form-control' } %>
    </div>
    <%= f.submit "Add Bookmark", class: "btn btn-success" %>
  <% end %>
  <%= link_to 'Back to List', list_path(@list), class: "btn btn-secondary mt-3" %>
</div>
