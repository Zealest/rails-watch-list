<div class="container">
  <h1 class="text-center my-4">Create a New List</h1>
  <%= simple_form_for @list do |f| %>
    <div class="form-group">
      <%= f.input :name, label: "List Name", input_html: { class: 'form-control' } %>
    </div>
    <%= f.submit "Create List", class: "btn btn-primary" %>
  <% end %>
  <%= link_to 'Back to Lists', lists_path, class: "btn btn-secondary mt-3" %>
</div>
