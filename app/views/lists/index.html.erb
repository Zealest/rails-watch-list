<h1 class="text-center my-4">All Lists</h1>
<div class="container">
  <ul class="list-group mb-4">
    <% @lists.each do |list| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to list.name, list_path(list), class: "stretched-link" %>
        <%= link_to 'Show', list_path(list), class: "btn btn-info btn-sm" %>
      </li>
    <% end %>
  </ul>
  <%= link_to 'Create New List', new_list_path, class: "btn btn-success" %>
</div>
